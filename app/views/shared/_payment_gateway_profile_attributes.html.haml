.inline-control-group
  .control-label
    %label
      Card Number
  .controls
    = f.text_field :card_number, { :maxlength => 19, :class => 'card_number'}.merge(card_number_placeholder ? { :placeholder => card_number_placeholder } : {})

.inline-control-group
  .control-label
    %label
      Month
  .controls
    = f.text_field :expiration_month, { :placeholder => 'MM', :maxlength => 2, :class => 'expiration_month' }

.inline-control-group
  .control-label
    %label
      Year
  .controls
    = f.text_field :expiration_year, {:placeholder => 'YY', :maxlength => 2, :class => 'expiration_year' }

.inline-control-group
  .control-label
    %label
      CVV
  .controls
    = f.text_field :cv_code, { :max_length => 3, :class => "cv_code", :placeholder => 'CVV' }
