
= simple_form_for :odesk_lister, :html => { :class => 'form-horizontal' } do |f|

  = f.input :name

  = f.input :search_phrase

  .control-group
    .controls
      %label.checkbox
        = check_box_tag 'odesk_lister[active]', 'true', false, :class => 'active boolean'
        Active

  .row-fluid
    .span6
      .control-group
        .control-label
          %label
            Ranking:
        .controls
          .read-only-field{ :data => { :name => 'odesk_lister[ranking]' } }
    .span6
      = read_only_field(:odesk_lister, :last_ranked_at, ["datetime"])

  .row-fluid
    .span12
      .control-group
        .control-label
          %label
            Matching URL:
        .controls
          .read-only-field{ :data => { :name => 'odesk_lister[matching_url]' } }

      = read_only_field(:odesk_lister, :matching_title)

  .row-fluid
    .span6
      .control-group
        .control-label
          %label
            Runs this window:
        .controls
          .read-only-field{ :data => { :name => 'odesk_lister[runs_since_window_started]' } }

    .span6
      = read_only_field(:odesk_lister, :window_will_reset_at, ["datetime"])

  .row-fluid
    .span12
      .control-group.error
        .control-label
          %label
            Last Error:
        .controls
          .read-only-field{ :data => { :name => 'odesk_lister[last_error]' } }

  .control-group
    .controls
      = render :partial => 'shared/model_view_basic_buttons'

      .btn-group
        %buton.btn.refresh
          Refresh

      .btn-group
        %button.rank.put_action.btn{ :type => "button", :data => {:action => 'rank', :attribute_enabler => 'runnable?', :enabled_when => 'true', :confirm => t('backgrounded_polling.run_confirm') } }
          Run

      = render :partial => 'shared/model_view_delete_button', :locals => { :data => { :attribute_enabler => 'destroyable', :enabled_when => 'true' } }

